<Window x:Class="CourseProjectDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProjectDB"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="400" Width="600">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="../Images/LogIn.jpg"/>
        </Grid.Background>

        <Label Content="Авторизация" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="15" Margin="335,80,0,0"/>

        <TextBox Name="Login" Width="150px" Height="25px" Margin="180,-40,0,0"  MaxLength="50"/>


        <PasswordBox Name="Password" Width="150px" Height="25px" Margin="180,80,0, 0" MaxLength="50"/>

        <Label Content="Логин" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="304,124,0,0"/>
        <Label Content="Пароль" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="305,184,0,0"/>

        <Button Content="Вход" HorizontalAlignment="Left" Height="25px" Margin="348,180,0,0" RenderTransformOrigin="-0.303,0.303" Width="74" Click="Button_Click"/>

    </Grid>

</Window>
